<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page4">

    <Button
        android:id="@+id/finalizarButton"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/colorbutton"
        android:text="Finalizar"
        android:textAllCaps="false"
        android:textColor="#16616E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sintomasCheck7" />

    <CheckBox
        android:id="@+id/sintomasCheck2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/checkbox"
        android:buttonTint="#E3F4F2"
        android:padding="10dp"
        android:text="Tos"
        android:textColor="#2A4251"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sintomasCheck1" />

    <CheckBox
        android:id="@+id/sintomasCheck7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/checkbox"
        android:buttonTint="#E3F4F2"
        android:padding="10dp"
        android:text="Ninguna de las anteriores"
        android:textColor="#2A4251"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sintomasCheck6" />

    <TextView
        android:id="@+id/sintomasTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sintomas"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizHeader" />

    <TextView
        android:id="@+id/quizHeader"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/header"
        android:paddingTop="10dp"
        android:text="Quiz 1"
        android:textAlignment="center"
        android:textColor="#106E88"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Elige las opciones que apliquen a tu caso:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sintomasTitle" />

    <CheckBox
        android:id="@+id/sintomasCheck1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/checkbox"
        android:buttonTint="#E3F4F2"
        android:padding="10dp"
        android:text="Fiebre"
        android:textColor="#2A4251"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <CheckBox
        android:id="@+id/sintomasCheck3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/checkbox"
        android:buttonTint="#E3F4F2"
        android:padding="10dp"
        android:text="Dolor de garganta"
        android:textColor="#2A4251"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sintomasCheck2" />

    <CheckBox
        android:id="@+id/sintomasCheck4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/checkbox"
        android:buttonTint="#E3F4F2"
        android:padding="10dp"
        android:text="Congestion Nasal"
        android:textColor="#2A4251"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sintomasCheck3" />

    <CheckBox
        android:id="@+id/sintomasCheck5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/checkbox"
        android:buttonTint="#E3F4F2"
        android:padding="10dp"
        android:text="Fatiga"
        android:textColor="#2A4251"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sintomasCheck4" />

    <CheckBox
        android:id="@+id/sintomasCheck6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/checkbox"
        android:buttonTint="#E3F4F2"
        android:padding="10dp"
        android:text="Dificultad para respirar"
        android:textColor="#2A4251"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sintomasCheck5" />

</androidx.constraintlayout.widget.ConstraintLayout>